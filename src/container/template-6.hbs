<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="heder_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<div class="main">
	{{#with info}}
	<div class="main_info">
		<h1 class="main_title">{{title}}</h1>
		<p class="main_description">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}"
				class="form_input">
			{{/each}}
		</div>

		<div class="form_checkox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>

		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</div>

<div class="updates">
	{{#with updates}}
	<h2 class="updates_title">{{title}}</h2>
	{{#each list}}
	<div class="list">
		<img src="https://picsum.photos/32/32" alt="user_photo" class="list_photo">
		<div class="list_info">
			<strong class="list_nickname">{{nickname}}</strong>
			<p class="list-description">{{description}}</p>
		</div>
	</div>
	{{/each}}
	<div>
		<a href="{{show_all.url}}" class="show_all">{{show_all.text}}</a>
	</div>
	{{/with}}
</div>

{{#with expirience}}
<div class="expirience">
	<h2 class="expirience_title">{{title}}</h2>
	<span class="expirience_badge">{{badge}}</span>
	<div class="expirience_list">
		{{#each list}}
		<div>
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>
</div>
{{/with}}

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>