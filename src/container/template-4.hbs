<header class="header">
	<div>
		{{> logo}}
	</div>
	<nav class="heder_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

{{#with main}}
<div class="main">
	<img src="{{image}}" alt="image" class="main_image">
	<div class="main_content">
		<h1 class="main_heading">{{heading}}</h1>
		<p class="main_descriotion">{{descriotion}}</p>
		<a href="{{href}}" class="main_button">{{button}}</a>
	</div>
</div>
{{/with}}

<div class="featured">
	{{#each featured}}
	<div class="card">
		<img src="{{photo}}" alt="photo" class="card_photo">
		<h2 class="card_heading">{{heading}}</h2>
		<p class="card_info">{{info}}</p>
		<a class="card_action" href="{{linkUrl}}">Call to action</a>
	</div>
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	<div class="actions_content">
		<h3 class="action_heading">{{heading}}</h3>
		<a class="action_button" href="{{url}}">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>